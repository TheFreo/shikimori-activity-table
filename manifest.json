{
  "description": "Adds an activity table to Shikimori",
  "manifest_version": 2,
  "name": "Shikimori Activity Table",
  "homepage_url": "https://github.com/TheFreo/shikimori-activity-table",
  "version": "1.2.1",
  "icons": {
    "64": "icons/64.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "me@thefreo.ru",
      "strict_min_version": "65.0",
      "data_collection_permissions": {
          "required": [
             "websiteContent"
          ]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.shikimori.one/*", "*://*.shiki.one/*"],
      "js": ["src/main.js"],
      "run_at": "document_end",
      "css": ["src/style.css"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
